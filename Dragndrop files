#include <stdio.h>
#include <stdlib.h>

int main(int argc, char* argv[]) //int main(int argc , char* *argv)
//argc meters how inputs or files you give your programm,if ther's no input
//argcounter is 1   
{
	system("CHCP 1253 > nul");
	
	int i;
	if(argc<2)
	{
		printf("No parameters of arguments specified..\a\n");
		system("PAUSE");
		exit(1);
	}
	printf("Number of arguments (argc integer) : %d\n" ,argc);
	
	printf("\nNames of arguments (argc[] array) : \n---------------------------------------------\n" );
	for(i=0; i <argc; i++)
		printf("argv[%d] = %s\n" , i ,argv[i]);
		
		printf("\n");
		system("PAUSE");
		return 0;
	}
