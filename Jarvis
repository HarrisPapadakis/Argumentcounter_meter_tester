import pyttsx3
import speech_recognition as sr
import datetime
import os
import wikipedia
import pywhatkit
import pyautogui  # για χειρισμό πληκτρολογίου / παραθύρων

# === ΡΥΘΜΙΣΗ ΟΜΙΛΙΑΣ ===
engine = pyttsx3.init('sapi5')
voices = engine.getProperty('voices')
engine.setProperty('voice', voices[0].id)  # Επιλέγουμε φωνή

def speak(audio):
    engine.say(audio)
    engine.runAndWait()

def respond(message):
    """Τυπώνει και μιλάει την ίδια απάντηση"""
    print("Jarvis:", message)
    speak(message)

# === ΣΥΛΛΟΓΗ ΕΝΤΟΛΩΝ ΜΕ ΔΙΓΛΩΣΣΗ ΑΝΑΓΝΩΡΙΣΗ ===
def commands():
    r = sr.Recognizer()
    with sr.Microphone() as source:
        respond("Listening...")
        r.pause_threshold = 1
        r.adjust_for_ambient_noise(source, duration=1)
        audio = r.listen(source)

    try:
        # Προσπάθεια πρώτα στα Ελληνικά
        query = r.recognize_google(audio, language='el-GR')
        query = query.lower()
        respond(f"Εσύ είπες: {query}")
    except:
        try:
            # Αν αποτύχει, δοκιμάζουμε Αγγλικά
            query = r.recognize_google(audio, language='en-US')
            query = query.lower()
            respond(f"You said: {query}")
        except Exception as e:
            respond("Δεν άκουσα καλά, επανέλαβε παρακαλώ.")
            query = "none"

    return query

# === ΧΑΙΡΕΤΙΣΜΟΣ ΑΝΑΛΟΓΑ ΜΕ ΤΗΝ ΩΡΑ ===
def wishings():
    hour = int(datetime.datetime.now().hour)
    if hour >= 0 and hour < 12:
        respond("Good Morning Boss")
    elif hour >= 12 and hour < 17:
        respond("Good Afternoon Boss")
    elif hour >= 17 and hour < 21:
        respond("Good Evening Boss")
    else:
        respond("Good Night Boss")

# === ΚΥΡΙΟ ΠΡΟΓΡΑΜΜΑ ===
if __name__ == "__main__":
    wishings()

    while True:  # τρέχει συνεχώς
        query = commands()

        # --- Small Talk ---
        if 'hello jarvis' in query:
            respond("Hello Boss, I am online and ready.")

        elif 'how are you' in query:
            respond("I am always at your service, Boss. How are you?")

        elif 'who created you' in query:
            respond("I was created by my developer, but I only serve you, Boss.")

        elif 'thank you' in query or 'thanks' in query:
            respond("You are welcome Boss. It's my pleasure.")

        elif 'good morning' in query:
            respond("Good morning Boss. Ready for today’s tasks?")

        elif 'good night' in query:
            respond("Good night Boss. I will be here whenever you need me.")

        elif 'exit' in query or 'quit' in query or 'bye jarvis' in query:
            respond("Goodbye Boss, shutting down now.")
            break

        # --- Βασικές Εντολές ---
        elif 'time' in query:
            strTime = datetime.datetime.now().strftime("%H:%M:%S")
            respond(f"Sir, the time is {strTime}")

        elif 'open edge' in query:
            respond("Opening Microsoft Edge...")
            os.startfile("C:\\Program Files (x86)\\Microsoft\\Edge\\Application\\msedge.exe")

        elif 'wikipedia' in query:
            respond("Searching in Wikipedia...")
            try:
                topic = query.replace("wikipedia", "").strip()
                results = wikipedia.summary(topic, sentences=1)
                respond("According to Wikipedia:")
                respond(results)
            except:
                respond("No results found...")

        elif 'youtube' in query:
            respond("Opening YouTube...")
            pywhatkit.playonyt(query.replace("youtube", "").strip())

        # --- Χειρισμός Παραθύρων & Υπολογιστή ---
        elif 'enter' in query:
            respond("Pressing Enter")
            pyautogui.press("enter")

        elif 'minimize' in query:
            respond("Minimizing window")
            pyautogui.hotkey("win", "down")

        elif 'maximize' in query:
            respond("Maximizing window")
            pyautogui.hotkey("win", "up")

        elif 'switch off this pc' in query or 'shutdown' in query:
            respond("Shutting down your computer...")
            os.system("shutdown /s /t 1")

        elif 'restart this pc' in query or 'restart' in query:
            respond("Restarting your computer...")
            os.system("shutdown /r /t 1")

        elif 'log out' in query or 'sign out' in query:
            respond("Logging out...")
            os.system("shutdown /l")

        # --- Άνοιγμα Εφαρμογών ---
        elif 'open notepad' in query:
            respond("Opening Notepad...")
            os.system("notepad")

        elif 'open calculator' in query:
            respond("Opening Calculator...")
            os.system("calc")

        elif 'open explorer' in query or 'open file explorer' in query:
            respond("Opening File Explorer...")
            os.system("explorer")

        elif 'open spotify' in query:
            respond("Opening Spotify...")
            try:
                os.startfile("C:\\Users\\YourUser\\AppData\\Roaming\\Spotify\\Spotify.exe")
            except:
                respond("Sorry, I could not find Spotify on your system.")
